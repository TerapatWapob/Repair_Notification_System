@{
    Layout = "_StaffLayout"; // Specify a custom layout
}
<style>
  .adminadd-header {
    background-color: #007BFF; /* Blue background */
    color: white;
    padding: 10px;
    text-align: center;
    border-radius: 10px 10px 0 0;
    text-shadow: -2px -2px 0 black, 2px -2px 0 black, -2px 2px 0 black, 2px 2px 0 black; /* Black stroke */
  }
  .adminadd-form {
    background-color: #f0f8ff; /* Light blue */
    padding: 20px;
    border-radius: 0 0 10px 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }
  .form-container {
    max-width: 500px;
    margin: 50px auto;
  }
  .btn-green {
    background-color: #28a745; /* Green button */
    color: black;
    border: 2px solid white;
    border-radius: 5px;
  }
  .btn-green:hover {
    background-color: #218838;
    color: white;
  }
</style>
    
  <div class="form-container">
    <!-- Header -->
    <div class="adminadd-header">
      <h3>ระบบจัดการบัญชี Admin (เพิ่มบัญชี)</h3>
    </div>
    <!-- Form -->
    <div class="adminadd-form">
      <form>
        <div class="mb-3">
          <label for="fullName" class="form-label">ชื่อ-นามสกุล</label>
          <input type="text" class="form-control" id="fullName" placeholder="กรอกชื่อ-นามสกุล">
        </div>
        <div class="mb-3">
          <label for="position" class="form-label">ตำแหน่ง</label>
          <input type="text" class="form-control" id="position" placeholder="กรอกตำแหน่ง">
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label">เบอร์โทรศัพท์ส่วนตัว</label>
          <input type="tel" class="form-control" id="phone" placeholder="กรอกเบอร์โทรศัพท์">
        </div>
        <div class="mb-3">
          <label for="username" class="form-label">ชื่อบัญชี</label>
          <input type="text" class="form-control" id="username" placeholder="กรอกชื่อบัญชี">
        </div>
        <div class="mb-3">
          <label for="newPassword" class="form-label">รหัสผ่านใหม่</label>
          <input type="password" class="form-control" id="newPassword" placeholder="กรอกรหัสผ่านใหม่">
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="form-label">ยืนยันรหัสผ่านใหม่</label>
          <input type="password" class="form-control" id="confirmPassword" placeholder="ยืนยันรหัสผ่านใหม่">
        </div>
        <form method="post" action="@Url.Action("AddNewAdmin", "Staff")">
            <!-- Fields here -->
            <button type="submit" class="btn btn-green">เพิ่มบัญชี</button>
        </form>
      </form>
    </div>
  </div>
