@{
    Layout = "_StaffLayout"; // Use the staff layout
}

<style>
  .adminedit-header {
    background-color: #007BFF; /* Blue background */
    color: white;
    padding: 10px;
    text-align: center;
    border-radius: 10px 10px 0 0;
    text-shadow: -2px -2px 0 black, 2px -2px 0 black, -2px 2px 0 black, 2px 2px 0 black; /* Black stroke */
  }
  .adminedit-form {
    background-color: #f0f8ff; /* Light blue */
    padding: 20px;
    border-radius: 0 0 10px 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }
  .form-container {
    max-width: 500px;
    margin: 50px auto;
  }
  .btn-green {
    background-color: #28a745; /* Green button */
    color: white;
    border: 2px solid white;
    border-radius: 5px;
  }
  .btn-green:hover {
    background-color: #218838;
    color: white;
  }
  .btn-red {
    background-color: #e71616;
    color: white;
    border: 2px solid white;
    border-radius: 5px;
  }
  .btn-red:hover {
    background-color: #c00d0d;
    color: white;
  }
  .btn-blue {
    background-color: #2b18d3;
    color: white;
    border: 2px solid white;
    border-radius: 5px;
  }
  .btn-blue:hover {
    background-color: #1a0ea0;
    color: white;
  }
</style>

<div class="form-container">
    <!-- Header -->
    <div class="adminedit-header">
        <h3>ระบบจัดการบัญชี Admin (แก้ไขบัญชี)</h3>
    </div>

    <!-- Form -->
    <div class="adminedit-form">
        <form method="post" action="@Url.Action("UpdateAdmin", "Staff")" onsubmit="return confirmEdit();">
            <input type="hidden" name="ID" value="@Model.ID" />

            <div class="mb-3">
                <label for="fullName" class="form-label">ชื่อ-นามสกุล</label>
                <input type="text" class="form-control" id="fullName" name="Name" value="@Model.Name">
            </div>
            <div class="mb-3">
                <label for="position" class="form-label">ตำแหน่ง</label>
                <input type="text" class="form-control" id="position" name="Position" value="@Model.Position">
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">เบอร์โทรศัพท์ส่วนตัว</label>
                <input type="tel" class="form-control" id="phone" name="PhoneNumber" value="@Model.PhoneNumber" maxlength="13" oninput="this.value = this.value.replace(/[^0-9+\-*\/]/g, '').slice(0,13)">

            </div>
            <div class="mb-3">
                <label for="username" class="form-label">ชื่อบัญชี</label>
                <input type="text" class="form-control" id="username" name="Username" value="@Model.Username" disabled>
            </div>
            <div class="d-flex justify-content-end gap-2 mt-3">
                <button type="submit" class="btn btn-green">บันทึกการแก้ไข</button>
            </div>
        </form>
        <div class="text-end">
        <form method="post" action="@Url.Action("ResetAdminPassword", "Staff")" onsubmit="return confirmReset();">
          <input type="hidden" name="ID" value="@Model.ID" />
          <button type="submit" class="btn btn-red">รีเซ็ตรหัสผ่าน</button>
        </form>
        <form method="get" action="@Url.Action("AdminAccountManager", "Staff")">
             <button type="submit" class="btn btn-blue">ย้อนกลับ</button>
        </form>
        </div>
    </div>
</div>
<script>
    function confirmEdit() {
        return confirm("โปรดยืนยันการบันทึกข้อมูล");
    }
    function confirmReset() {
        return confirm("คุณแน่ใจหรือไม่ที่ต้องการรีเซ็ตรหัสผ่าน? รหัสผ่านใหม่จะเป็น '12345678'");
    }
</script>
