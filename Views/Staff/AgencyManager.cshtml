@{
    Layout = "_StaffLayout"; // Specify a custom layout
}

@model List<RPS_DB.Models.Agency>

<style>
    .header {
        background-color: #007BFF; /* Blue background */
        color: white;
        text-align: center;
        padding: 15px;
        border-radius: 10px 10px 0 0;
        text-shadow: -1px -1px 0 black, 1px -1px 0 black, -1px 1px 0 black, 1px 1px 0 black; /* Black stroke */
        font-size: 1.5rem; /* Larger font size for header */
        width: 100%; /* Ensure header width matches subheader and content */
    }
    .subheader {
        background-color: #f0f8ff; /* Light blue background */
        padding: 10px;
        font-weight: bold;
        font-size: 1rem; /* Smaller font size than header */
    }
    .content {
        background-color: white; /* White background for future content */
        padding: 20px 10px;
        border-radius: 0 0 10px 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    /* Adjusted flexbox layout to match columns */
    .content .agency-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }
    .content .agency-item {
        text-align: center;
        padding: 10px;
    }
    /* Specific width for each column to match header */
    .agency-id {
        width: 10%; /* Set width to match "หมายเลข" column */
    }
    .agency-name {
        width: 60%; /* Set width to match "ชื่อหน่วยงาน" column */
    }
    .agency-action {
        width: 15%; /* Set width for action buttons */
    }
</style>

<br><br>
<div class="container mt-5">
    <!-- Header -->
    <div class="header">
        <h2>ระบบจัดการรายชื่อหน่วยงาน</h2>
        <div class="subheader row text-center">
            <div class="col-1 d-flex justify-content-center align-items-center">หมายเลข</div>
            <div class="col">ชื่อหน่วยงาน</div>
            <div class="col-1 d-flex justify-content-center align-items-center"></div> <!-- Smaller column for action buttons -->
            <div class="col-1 d-flex justify-content-center align-items-center"></div> <!-- Smaller column for action buttons -->
            <div class="col-1 d-flex justify-content-center align-items-center"></div> 
            
        </div>
    </div>

    <!-- Content -->
    <div class="content">
        <!-- Display the list of agencies -->
        @foreach (var agency in Model)
        {
            <div class="agency-row">
                <div class="agency-item agency-id">@agency.ID</div> <!-- Display Agency ID -->
                <div class="agency-item agency-name">@agency.AgencyName</div> <!-- Display Agency Name -->
                <div class="agency-item agency-action">
                    <button class="btn btn-info">แก้ไข</button> <!-- Placeholder for Delete button -->
                </div>
                <div class="agency-item agency-action">
                    <button class="btn btn-danger">ลบ</button> <!-- Placeholder for Edit button -->
                </div>
            </div>
        }
    </div>

    <!-- Add Agency Section (Placeholder for Add functionality) -->
    <div class="mt-4">
        <button class="btn btn-primary">Add Agency</button> <!-- Placeholder for Add button -->
    </div>
</div>

