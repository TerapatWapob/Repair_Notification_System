@{
    Layout = "_StaffLayout"; // Specify a custom layout
}
  <style>
    .header {
      background-color: #007BFF; /* Blue background */
      color: white;
      text-align: center;
      padding: 15px;
      border-radius: 10px 10px 0 0;
      text-shadow: -1px -1px 0 black, 1px -1px 0 black, -1px 1px 0 black, 1px 1px 0 black; /* Black stroke */
      font-size: 1.5rem; /* Larger font size for header */
      width: 100%; /* Ensure header width matches subheader and content */
    }
    .subheader {
      background-color: #f0f8ff; /* Light blue background */
      padding: 10px 15px; /* Adjust padding for consistency */
      font-weight: bold;
      font-size: 1rem; /* Smaller font size than header */
      width: 100%; /* Make sure it's the same width as header */
      box-sizing: border-box; /* Ensures padding doesn't add extra width */
      display: flex;
      justify-content: space-between; /* Spread columns evenly */
      align-items: center; /* Vertically center text */
    }
    .content {
    background-color: white;
    padding: 10px 30px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    width: 100%; /* Ensures content width matches header */
    }
    .content .row {
    padding: 5px 0; /* Increase top and bottom padding */
    align-items: center; /* Keep content vertically centered */
}
    .content .col {
      padding: 10px;
      text-align: center;
    }
  </style>

    <br>
    <br>

@{
    int index = 1;  
    var today = DateTime.Today;
}

<div class="container mt-5">
  <div class="header w-100">
    <h2>ระบบจัดการรายการแจ้งซ่อมในระบบ</h2>
  </div>

  <div class="subheader row text-center w-100 m-0">
    <div class="col-1 d-flex justify-content-center align-items-center">รายการที่</div>
    <div class="col">เรื่อง</div>
    <div class="col-3 d-flex justify-content-center align-items-center">ผู้รายงาน</div>
    <div class="col-3 d-flex justify-content-center align-items-center">วันที่รายงาน</div>
    <div class="col-1 d-flex justify-content-center align-items-center"></div>
    <div class="col-1 d-flex justify-content-center align-items-center"></div>
    <div class="col-1 d-flex justify-content-center align-items-center"></div>
  </div>

  <div class="content row w-100 m-0">
    @foreach (var ticket in Model)
    {
      if (ticket.StartDate != null && (today - ticket.StartDate).Days <= 365)
      {
        <div class="row text-center">
        <div class="col-1 d-flex justify-content-center align-items-center">@index</div>
        <div class="col d-flex justify-content-center align-items-center">@ticket.Topic</div>
        <div class="col-3 d-flex justify-content-center align-items-center">@ticket.Name</div>
        <div class="col-3 d-flex justify-content-center align-items-center">@ticket.StartDate.ToString("dd-MM-yyyy")</div>
        <div class="col-1 d-flex justify-content-center align-items-center">
          <a href="" class="btn btn-info">แก้ไข</a>
        </div>
        <div class="col-1 d-flex justify-content-center align-items-center">
          <a href="" class="btn btn-danger">ลบ</a>
        </div>
        <div class="col-1 d-flex justify-content-center align-items-center">
          <a href="" class="btn btn-success">เสร็จสิ้น</a>
        </div>
        </div>
        index++;
      }
    }
    
  </div>
</div>

