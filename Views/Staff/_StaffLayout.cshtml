<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Repair Notification System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Repair_Notification_System.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var isLoggedIn = User.Identity.IsAuthenticated;
        var userRole = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
    }

    <header>
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar (hidden on small screens) -->
                <nav id="sidebar" class="col-3 col-md-2 col-lg-2 d-flex flex-column bg-red sidebar">
                    <div class="sidebar-header">
                        <a class="navbar-brand" asp-area="" asp-controller="Staff" asp-action="Index">
                            <br>
                            <center><img src="~/image/RNS_Icon.png" width="120" height="120" alt="Logo"></center>
                        </a>
                    </div>
                    <br>
                    <ul class="nav flex-column">
                        @if (!isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Staff" asp-action="Index">เข้าสู่ระบบ</a>
                            </li>
                        }

                        <!-- Admin Account Manager (Only for SystemAdmins) -->
                        @if (isLoggedIn && userRole == "SystemAdmin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Staff" asp-action="AdminAccountManager">ระบบจัดการบัญชี Admin</a>
                            </li>
                        }

                        <!-- Normal Menu (Only if logged in) -->
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Staff" asp-action="Profile">โปรไฟล์และการจัดการบัญชี</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Staff" asp-action="AgencyManager">จัดการรายชื่อหน่วยงาน</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Staff" asp-action="TicketManager">จัดการรายการแจ้งซ่อมในระบบ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Staff" asp-action="FinishTicket">รายการที่ดำเนินการเรียบร้อยแล้ว</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Staff" asp-action="Report">ผลการดำเนินงาน</a>
                            </li>

                            <!-- Logout Button -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Staff" asp-action="Logout" onclick="return confirm('คุณต้องการออกจากระบบ?');">ออกจากระบบ</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content Area -->
    <main class="col-md-9 ms-sm-auto col-lg-11">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
            <!-- Footer -->
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                <center>&copy; 2568 - Repair_Notification_System - <a asp-area="" asp-controller="Staff" asp-action="index">หน้าแรก</a></center>
            </div>
        </footer>
    </main>

    <!-- Bootstrap Bundle JS (includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Hamburger Button Outside Sidebar -->
    <button class="hamburger-icon-outside d-md-none" onclick="toggleSidebar()">&#9776;</button>

    <script>
        // Toggle sidebar when hamburger is clicked
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('show'); // Toggle sidebar visibility
        }
    </script>
</body>
</html>
